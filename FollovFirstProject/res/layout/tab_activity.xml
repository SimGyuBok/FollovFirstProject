<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	>
    <ImageButton
		android:id="@+id/hometab_btn"  
		android:layout_width="0px" 
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:scaleType="centerCrop"
		android:padding="0sp"
		android:background="#00000000"
		android:src="@drawable/hometab_img_on" 
	/>
    <ImageButton
		android:id="@+id/couplenewstab_btn"  
		android:layout_width="0px" 
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:scaleType="centerCrop"
		android:padding="0sp"
		android:background="#00000000"
		android:src="@drawable/couplenewstab_img_off" 
	/>
    <ImageButton
		android:id="@+id/cloudtab_btn"  
		android:layout_width="0px" 
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:scaleType="centerCrop"
		android:padding="0sp"
		android:background="#00000000"
		android:src="@drawable/cloudtab_img_off" 
	/>
	<LinearLayout
	    android:layout_width="0px"
	    android:layout_height="fill_parent"
	    android:layout_weight="4"
	    />
	<ImageButton
		android:id="@+id/settingbtn"  
		android:layout_width="0px" 
		android:layout_height="fill_parent"
		android:layout_weight="1"
		android:scaleType="centerCrop"
		android:padding="0sp"
		android:background="#00000000"
		android:src="@drawable/settingbtn_img" 
	/>   
</LinearLayout>